<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="MainTheme" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.OverlapSystemBar" parent="AppTheme" />

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="EditTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:minHeight">33dip</item>
        <item name="android:background">@drawable/edit_text</item>
        <item name="android:textCursorDrawable">@drawable/edittext_cursor_drawable</item>
        <item name="android:textColor">@drawable/edit_text_font_color</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColorHint">#b5b7bb</item>
        <item name="android:imeOptions">flagNoExtractUi</item>
    </style>

    <style name="EditTextStyle.Clearable">
        <!-- + 2015.05 -->
        <!-- <item name="android:minHeight">33dip</item> -->
        <item name="android:minHeight">45dip</item>
        <!-- - 2015.05 -->
        <item name="android:background">@null</item>
        <!-- <item name="android:layout_marginRight">4dip</item> -->
    </style>

    <style name="Copyright">
        <item name="android:textColor">#666666</item>
        <item name="android:textSize">11dp</item>
    </style>

</resources>
